<!DOCTYPE html>
<html>
<head>
  <title>Barbecues</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application', defer: true %>
  <%= csrf_meta_tags %>
</head>
<body data-hook="controller-<%= controller_name %> action-<%= action_name %>">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
				<nav class="navbar navbar-default navbar-fixed-top">
				    <div class="container">
				        <!-- Brand and toggle get grouped for better mobile display -->
				        <div class="navbar-header page-scroll">
				            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
				                <span class="sr-only">Toggle navigation</span>
				                <span class="icon-bar"></span>
				                <span class="icon-bar"></span>
				                <span class="icon-bar"></span>
				            </button>
				        </div>

				        <!-- Collect the nav links, forms, and other content for toggling -->
				        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				            <ul class="nav navbar-nav navbar-right">
				                <li class="hidden">
				                    <a href="#page-top"></a>
				                </li>
				                <li class="page-scroll">
				                    <a href="<%= new_user_registration_path %>">Sign up</a>
				                </li>
				                <% if current_user.nil? %>
					                <li class="page-scroll">
					                    <a href="<%= new_user_session_path %>">Log in</a>
					                </li>
				                <% else %>
					                <li class="page-scroll">
					                    <a href="<%= destroy_user_session_path %>" data-method="delete">Log out</a>
					                </li>
				                <% end %>
				            </ul>
				        </div>
				        <!-- /.navbar-collapse -->
				    </div>
				    <!-- /.container-fluid -->
				</nav>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<% unless flash.empty? %>
					<%= flash.each do |key, msg| %>
						<%= content_tag :div, msg, id: key, style: "color: red;" %>
					<% end %>
				<% end %>

				<%= yield %>
			</div>
		</div>
	</div>

<!--   <div class="container">
    <%= yield %>
  </div> -->

</body>
</html>
