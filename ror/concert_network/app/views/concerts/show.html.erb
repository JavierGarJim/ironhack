<h2><%= @concert.artist %></h2>
<ul>
	<li>WHERE: <strong><%= @concert.venue %>, <%= @concert.city %></strong></li>
	<li>WHEN: <strong><%= @concert.date %></strong></li>
	<li>HOW MUCH: <strong><%= @concert.price %></strong></li>
	<br>
	<% unless @concert.description.nil? %>
		ABOUT: <p><%= @concert.description %></p>
	<% end %>
	<br>
	<div>
		<p>COMMENTS:</p>
		<ul>
			<% @comments.each do |c| %>
				<li>
					<%= c.description %>
				</li>
			<% end %>
		</ul>
		<div>
			<% if @concert.errors.any? %>
				<ul>
					<% @concert.errors.full_messages.each do |error_msg| %>
						<li><%= error_msg %></li>
					<% end %>
				</ul>
			<% end %>

			<%= form_for [@concert, @comment] do |f| %>
				<%= f.text_field :description %>
				<br>
				<%= f.submit 'Add comment' %>
			<% end %>
		</div>
	</div>
</ul>
<%= link_to('Back to home', '/') %>

